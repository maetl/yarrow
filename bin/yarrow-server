#!/usr/bin/env ruby

# load path annoyance
path = __FILE__
while File.symlink?(path)
  path = File.expand_path(File.readlink(path), File.dirname(path))
end
$:.unshift(File.join(File.dirname(File.expand_path(path)), '..', 'lib'))

require 'yarrow'

Yarrow::Configuration.register_defaults

server = Yarrow::Server.new
server.run
